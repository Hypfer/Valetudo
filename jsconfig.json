{
    "compilerOptions": {
        "checkJs": true,
        "module": "commonJS",
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "alwaysStrict": true,
        "resolveJsonModule": true
    },
    "exclude": ["node_modules", "**/node_modules/*"],
    "include": ["lib/**/*.js", "*.js", "lib/*.js"]
}
{
  "name": "valetudo",
  "version": "2021.04.0",
  "description": "Self-contained control webinterface for vacuum robots",
  "main": "index.js",
  "bin": "index.js",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=14"
  },
  "pkg": {
    "assets": [
      "client/**/*",
      ".git/HEAD",
      ".git/refs/heads/master"
    ]
  },
  "scripts": {
    "start": "node index.js",
    "lint": "eslint .",
    "lint_fix": "eslint . --fix",
    "ts-check": "tsc -p jsconfig.json",
    "test": "mocha \"test/**/*_spec.js\"",
    "build_all": "npm run build && npm run build_aarch64 && npm run build_armv7_lowmem",
    "build": "cross-env PKG_CACHE_PATH=./build_dependencies/pkg pkg --targets node16-linuxstatic-armv7 --no-bytecode --public-packages \"*\" --options \"expose-gc,max-heap-size=34\" . --output ./build/armv7/valetudo",
    "build_aarch64": "cross-env PKG_CACHE_PATH=./build_dependencies/pkg pkg --targets node16-linuxstatic-arm64 --no-bytecode --public-packages \"*\" --options \"expose-gc,max-heap-size=64\" . --output ./build/aarch64/valetudo",
    "build_armv7_lowmem": "cross-env PKG_CACHE_PATH=./build_dependencies/pkg pkg --targets node16-linuxstatic-armv7 --no-bytecode --public-packages \"*\" --options \"expose-gc,max-heap-size=30,optimize-for-size,lite-mode\" . --output ./build/armv7/valetudo_lowmem",
    "build_docs": "node ./util/generate_robot_docs.js && node ./util/generate_mqtt_docs.js && node ./util/swagger.mjs",
    "upx": "node ./util/upx_compress_valetudo.js",
    "swagger": "node util/swagger.mjs",
    "watch-swagger": "npm-watch swagger"
  },
  "pre-commit": [
    "ts-check",
    "lint_fix",
    "test"
  ],
  "watch": {
    "swagger": {
      "patterns": [
        "util/swagger/*",
        "lib/webserver/*",
        "lib/webserver/capabilityRouters/*",
        "lib/webserver/middlewares/*"
      ]
    },
    "extensions": "js,yml"
  },
  "author": "",
  "dependencies": {
    "@destinationstransfers/ntp": "^2.0.0",
    "async-mqtt": "^2.6.1",
    "body-parser": "^1.18.3",
    "compression": "^1.7.2",
    "crc": "^3.8.0",
    "express": "^4.17.1",
    "express-basic-auth": "^1.2.0",
    "express-dynamic-middleware": "^1.0.0",
    "express-list-endpoints": "^5.0.0",
    "express-rate-limit": "^5.2.6",
    "expresse": "git+https://npm@github.com/Hypfer/expresse",
    "mqtt": "^4.0.0",
    "multer": "^1.4.1",
    "uuid": "^8.3.0",
    "ws": "^6.1.4"
  },
  "devDependencies": {
    "@types/accepts": "^1.3.5",
    "@types/bytes": "^3.1.0",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.3",
    "@types/express-list-endpoints": "^4.0.1",
    "@types/mocha": "^7.0.2",
    "@types/multer": "^1.4.2",
    "@types/node": "^13.9.1",
    "@types/on-headers": "^1.0.0",
    "@types/uuid": "^8.3.0",
    "@types/ws": "^7.2.2",
    "cross-env": "7.0.2",
    "eslint": "^7.22.0",
    "eslint-plugin-jsdoc": "^30.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-regexp": "^0.5.0",
    "eslint-plugin-sort-keys-fix": "^1.1.1",
    "eslint-plugin-sort-requires": "^2.1.0",
    "mocha": "^7.1.1",
    "npm-watch": "^0.9.0",
    "nyc": "^15.1.0",
    "pkg": "5.1.0",
    "pre-commit": "^1.2.2",
    "should": "^13.2.3",
    "swagger-jsdoc": "^7.0.0-rc.6",
    "swagger-parser": "^10.0.2",
    "typescript": "^3.8.3",
    "upx": "git+https://npm@github.com/Hypfer/upx#v1.0.7"
  }
}

{
  "components": {
    "schemas": {
      "MqttConfigDTO": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "enabled",
          "server",
          "port",
          "clientId",
          "clean",
          "cleanTopicsOnShutdown",
          "username",
          "password",
          "usetls",
          "ca",
          "clientCert",
          "clientKey",
          "qos",
          "identifier",
          "friendlyName",
          "topicPrefix",
          "refreshInterval",
          "homie",
          "homeassistant",
          "provideMapData"
        ],
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "server": {
            "type": "string"
          },
          "port": {
            "type": "integer"
          },
          "clientId": {
            "type": "string",
            "description": "MQTT client ID. If empty or null it will be autogenerated",
            "nullable": true
          },
          "clean": {
            "type": "boolean"
          },
          "cleanTopicsOnShutdown": {
            "type": "boolean"
          },
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "usetls": {
            "type": "boolean"
          },
          "ca": {
            "type": "string"
          },
          "clientCert": {
            "type": "string"
          },
          "clientKey": {
            "type": "string"
          },
          "qos": {
            "type": "integer"
          },
          "identifier": {
            "type": "string",
            "description": "Robot name used in MQTT topics"
          },
          "friendlyName": {
            "type": "string"
          },
          "topicPrefix": {
            "type": "string"
          },
          "refreshInterval": {
            "type": "integer",
            "description": "Refresh interval for polled information"
          },
          "homie": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "enabled",
              "addICBINVMapProperty",
              "cleanAttributesOnShutdown"
            ],
            "properties": {
              "enabled": {
                "type": "boolean"
              },
              "addICBINVMapProperty": {
                "type": "boolean",
                "description": "If true, adds Homie definitions for ICBINV's PNG map topic"
              },
              "cleanAttributesOnShutdown": {
                "type": "boolean"
              }
            }
          },
          "homeassistant": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "enabled",
              "autoconfPrefix",
              "cleanAutoconfOnShutdown"
            ],
            "properties": {
              "enabled": {
                "type": "boolean"
              },
              "autoconfPrefix": {
                "type": "string"
              },
              "cleanAutoconfOnShutdown": {
                "type": "boolean"
              }
            }
          },
          "provideMapData": {
            "type": "boolean"
          }
        }
      },
      "BasicAuthConfigDTO": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "enabled",
          "username",
          "password"
        ],
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "NTPClientConfigDTO": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "enabled",
          "server",
          "port",
          "interval",
          "timeout"
        ],
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "server": {
            "type": "string",
            "description": "Can be either an IP or a Domain Name"
          },
          "port": {
            "type": "number"
          },
          "interval": {
            "type": "number",
            "description": "NTP Sync Interval in Milliseconds"
          },
          "timeout": {
            "type": "number",
            "description": "NTP Sync Timeout in Milliseconds"
          }
        }
      }
    }
  }
}

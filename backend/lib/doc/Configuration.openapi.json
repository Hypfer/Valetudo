{
  "components": {
    "schemas": {
      "Configuration": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "embedded": {
            "type": "boolean",
            "description": "Whether or not Valetudo is running on the robot itself.\nDetermines if we can do FS access and more."
          },
          "robot": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "implementation"
            ],
            "properties": {
              "implementation": {
                "type": "string",
                "description": "The name of the implementation that should be used.\nUse \"auto\" to autodetect when embedded."
              },
              "implementationSpecificConfig": {
                "type": "object"
              }
            }
          },
          "webserver": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "port",
              "basicAuth"
            ],
            "properties": {
              "port": {
                "type": "number"
              },
              "basicAuth": {
                "$ref": "#/components/schemas/BasicAuthConfigDTO"
              }
            }
          },
          "zonePresets": {
            "type": "object"
          },
          "goToLocationPresets": {
            "type": "object"
          },
          "mqtt": {
            "$ref": "#/components/schemas/MqttConfigDTO"
          },
          "ntpClient": {
            "$ref": "#/components/schemas/NTPClientConfigDTO"
          },
          "networkAdvertisement": {
            "$ref": "#/components/schemas/NetworkAdvertisementConfigDTO"
          },
          "timers": {
            "type": "object"
          },
          "allowSSHKeyUpload": {
            "type": "boolean"
          },
          "logLevel": {
            "type": "string",
            "enum": [
              "trace","debug","info","warn","error"
            ]
          },
          "debug": {
            "type": "object"
          }
        }
      },
      "MqttConfigDTO": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "enabled",
          "server",
          "port",
          "clientId",
          "clean",
          "cleanTopicsOnShutdown",
          "username",
          "password",
          "usetls",
          "ca",
          "clientCert",
          "clientKey",
          "qos",
          "identifier",
          "friendlyName",
          "topicPrefix",
          "refreshInterval",
          "homie",
          "homeassistant",
          "provideMapData"
        ],
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "server": {
            "type": "string"
          },
          "port": {
            "type": "integer"
          },
          "clientId": {
            "type": "string",
            "description": "MQTT client ID. If empty or null it will be autogenerated",
            "nullable": true
          },
          "clean": {
            "type": "boolean"
          },
          "cleanTopicsOnShutdown": {
            "type": "boolean"
          },
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "usetls": {
            "type": "boolean"
          },
          "ca": {
            "type": "string"
          },
          "clientCert": {
            "type": "string"
          },
          "clientKey": {
            "type": "string"
          },
          "qos": {
            "type": "integer"
          },
          "identifier": {
            "type": "string",
            "description": "Robot name used in MQTT topics"
          },
          "friendlyName": {
            "type": "string"
          },
          "topicPrefix": {
            "type": "string"
          },
          "refreshInterval": {
            "type": "integer",
            "description": "Refresh interval for polled information"
          },
          "homie": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "enabled",
              "addICBINVMapProperty",
              "cleanAttributesOnShutdown"
            ],
            "properties": {
              "enabled": {
                "type": "boolean"
              },
              "addICBINVMapProperty": {
                "type": "boolean",
                "description": "If true, adds Homie definitions for ICBINV's PNG map topic"
              },
              "cleanAttributesOnShutdown": {
                "type": "boolean"
              }
            }
          },
          "homeassistant": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "enabled",
              "autoconfPrefix",
              "cleanAutoconfOnShutdown"
            ],
            "properties": {
              "enabled": {
                "type": "boolean"
              },
              "autoconfPrefix": {
                "type": "string"
              },
              "cleanAutoconfOnShutdown": {
                "type": "boolean"
              }
            }
          },
          "provideMapData": {
            "type": "boolean"
          }
        }
      },
      "BasicAuthConfigDTO": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "enabled",
          "username",
          "password"
        ],
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "NTPClientConfigDTO": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "enabled",
          "server",
          "port",
          "interval",
          "timeout"
        ],
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "server": {
            "type": "string",
            "description": "Can be either an IP or a Domain Name"
          },
          "port": {
            "type": "number"
          },
          "interval": {
            "type": "number",
            "description": "NTP Sync Interval in Milliseconds"
          },
          "timeout": {
            "type": "number",
            "description": "NTP Sync Timeout in Milliseconds"
          }
        }
      },
      "NetworkAdvertisementConfigDTO": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "enabled"
        ],
        "properties": {
          "enabled": {
            "type": "boolean"
          }
        }
      },
      "ValetudoTimer": {
        "type": "object",
        "description": "Everything time-related is in UTC",
        "required": [
          "enabled",
          "dow",
          "hour",
          "minute",
          "action"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "enabled": {
            "type": "boolean"
          },
          "dow": {
            "type": "array",
            "description": "Day of Week\nSunday = 0, Monday = 1, ... Saturday = 6",
            "items": {
              "type": "number",
              "minimum": 0,
              "maximum": 6
            }
          },
          "hour": {
            "type": "number",
            "minimum": 0,
            "maximum": 23
          },
          "minute": {
            "type": "number",
            "minimum": 0,
            "maximum": 59
          },
          "action": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "full_cleanup",
                  "zone_cleanup",
                  "segment_cleanup",
                  "goto_location"
                ]
              },
              "params": {
                "type": "object",
                "description": "These vary depending on the Timer Type.",
                "additionalProperties": false,
                "properties": {
                  "zone_id": {
                    "type": "string"
                  },
                  "segment_ids": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "goto_id": {
                    "type": "string"
                  },
                  "iterations": {
                    "type": "integer",
                    "minimum": 1
                  },
                  "custom_order": {
                    "type": "boolean"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}

{
  "components": {
    "schemas": {
      "ValetudoWifiConfiguration": {
        "type": "object",
        "properties": {
          "ssid": {
            "type": "string",
            "description": "Wireless network name"
          },
          "credentials": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string"
              },
              "typeSpecificSettings": {
                "type": "object",
                "description": "Settings depending on type, for example WPA preshared key"
              }
            }
          },
          "details": {
            "type": "object",
            "properties": {
              "state": {
                "type": "string",
                "enum": [
                  "connected",
                  "not_connected",
                  "unknown"
                ]
              },
              "downspeed": {
                "type": "number"
              },
              "upspeed": {
                "type": "number"
              },
              "signal": {
                "type": "number"
              },
              "ips": {
                "type": "array",
                "description": "IP addresses",
                "items": {
                  "type": "string"
                }
              },
              "frequency": {
                "type": "string",
                "enum": [
                  "2.4ghz",
                  "5ghz"
                ]
              }
            }
          },
          "metaData": {
            "type": "object"
          }
        }
      }
    }
  }
}

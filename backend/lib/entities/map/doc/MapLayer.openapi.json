{
  "components": {
    "schemas": {
      "MapLayer": {
        "description": "A map layer is an array of pixels in a 2d space",
        "allOf": [
          {
            "$ref": "#/components/schemas/SerializableEntity"
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "floor",
                  "wall",
                  "segment"
                ]
              },
              "pixels": {
                "type": "array",
                "items": {
                  "type": "number"
                }
              },
              "dimensions": {
                "type": "object",
                "properties": {
                  "x": {
                    "type": "object",
                    "properties": {
                      "min": {
                        "type": "number"
                      },
                      "max": {
                        "type": "number"
                      },
                      "mid": {
                        "type": "number"
                      }
                    }
                  },
                  "y": {
                    "type": "object",
                    "properties": {
                      "min": {
                        "type": "number"
                      },
                      "max": {
                        "type": "number"
                      },
                      "mid": {
                        "type": "number"
                      }
                    }
                  }
                }
              }
            }
          }
        ]
      }
    }
  }
}

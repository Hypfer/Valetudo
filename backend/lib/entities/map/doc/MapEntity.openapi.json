{
  "components": {
    "schemas": {
      "MapEntity": {
        "description": "Map Entities are everything that is expressed with coordinates",
        "allOf": [
          {
            "$ref": "#/components/schemas/SerializableEntity"
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string"
              },
              "points": {
                "type": "array",
                "items": {
                  "type": "number"
                },
                "minItems": 2
              }
            }
          }
        ]
      }
    }
  }
}

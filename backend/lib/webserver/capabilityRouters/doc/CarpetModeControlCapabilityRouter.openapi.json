{
  "/api/v2/robot/capabilities/CarpetModeControlCapability/": {
    "get": {
      "tags": [
        "CarpetModeControlCapability"
      ],
      "summary": "Get carpet mode settings",
      "responses": {
        "200": {
          "description": "Ok",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "enabled": {
                    "type": "boolean"
                  }
                }
              }
            }
          }
        }
      }
    },
    "put": {
      "tags": [
        "CarpetModeControlCapability"
      ],
      "summary": "Set carpet mode settings",
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "action": {
                  "type": "string",
                  "enum": [
                    "enable",
                    "disable"
                  ]
                }
              }
            }
          }
        }
      },
      "responses": {
        "200": {
          "$ref": "#/components/responses/200"
        },
        "400": {
          "$ref": "#/components/responses/400"
        }
      }
    }
  }
}

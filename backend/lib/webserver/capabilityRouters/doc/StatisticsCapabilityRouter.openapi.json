  "/api/v2/robot/capabilities/TotalStatisticsCapability": {
    "get": {
      "tags": [
        "TotalStatisticsCapability"
      ],
      "summary": "Get total statistics",
      "responses": {
        "200": {
          "description": "Ok",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/ValetudoDataPoint"
                }
              }
            }
          }
        }
      }
    }
  },
  "/api/v2/robot/capabilities/TotalStatisticsCapability/properties": {
    "get": {
      "tags": [
        "TotalStatisticsCapability"
      ],
      "summary": "Get various capability-related properties",
      "responses": {
        "200": {
          "description": "Ok",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "availableStatistics": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "enum": [
                        "count",
                        "time",
                        "area"
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },


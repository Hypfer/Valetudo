{
  "/api/v2/robot/capabilities/MapSegmentEditCapability": {
    "put": {
      "tags": [
        "MapSegmentEditCapability"
      ],
      "summary": "Edit map segments",
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "allOf": [
                {
                  "type": "object",
                  "properties": {
                    "action": {
                      "type": "string",
                      "enum": [
                        "join_segments",
                        "split_segment"
                      ]
                    }
                  }
                }
              ],
              "oneOf": [
                {
                  "type": "object",
                  "description": "Provide if action is `join_segments`",
                  "properties": {
                    "segment_a_id": {
                      "type": "string"
                    },
                    "segment_b_id": {
                      "type": "string"
                    }
                  }
                },
                {
                  "type": "object",
                  "description": "Provide if action is `split_segment`",
                  "properties": {
                    "segment_id": {
                      "type": "string"
                    },
                    "pA": {
                      "$ref": "#/components/schemas/CoordinateDTO"
                    },
                    "pB": {
                      "$ref": "#/components/schemas/CoordinateDTO"
                    }
                  }
                }
              ]
            }
          }
        }
      },
      "responses": {
        "200": {
          "$ref": "#/components/responses/200"
        },
        "400": {
          "$ref": "#/components/responses/400"
        }
      }
    }
  }
}
